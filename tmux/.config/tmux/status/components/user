#!/usr/bin/env bash

# ┏━━━━━━┓
# ┃ user ┃
# ┗━━━━━━┛

source "${HOME}/.config/tmux/status/globals"

main() {
  local component=""
  component+="#[fg=${COLORS[CYAN]}]"
  component+="${ICONS[SHADE]} "
  component+="${ICONS[USER]} "
  component+="#[fg=${COLORS[FOREGROUND]}]"
  component+="$(whoami) "

  echo "${component}"
}
main "$@"
